<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@color/pink"
    tools:context=".RegisterActivity">

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/register_nickname"
        android:hint="Nickname"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/register_email"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:layout_gravity="center_horizontal"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/register_password"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/register_passwordcheck"
        android:inputType="textPassword"
        android:hint="Password Check"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/register_register"
        android:text="Register"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/register_naver"
        android:text="네이버 로그인"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#03C75A"
        android:textColor="@color/black"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/register_kakao"
        android:text="카카오 로그인"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#FEE500"
        android:textColor="@color/black"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/register_google"
        android:text="구글 로그인"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#ffffff"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="고객센터 문의하기"
        android:layout_marginTop="10dp"/>





</LinearLayout>